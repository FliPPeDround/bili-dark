{
  "name": "bili-dark",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@8.7.5",
  "description": "bilibili暗黑模式",
  "author": "FliPPeDround <FliPPeDround@qq.com>",
  "license": "MIT",
  "funding": "https://afdian.net/a/flippedround",
  "homepage": "https://github.com/FliPPeDround/bili-dark#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FliPPeDround/bili-dark.git"
  },
  "bugs": "https://github.com/FliPPeDround/bili-dark/issues",
  "keywords": [],
  "sideEffects": false,
  "scripts": {
    "dev": "concurrently \"vite\" \"nodemon\"",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:css": "stylelint \"src/**/*.less\" --fix",
    "prettier": "prettier --write \"src/**/*.less\"",
    "pack:zip": "rimraf dist.zip && jszip-cli add dist/* -o ./dist.zip",
    "pack:crx": "crx pack dist -o ./dist.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./dist --filename dist.xpi --overwrite-dest",
    "start": "web-ext run --devtools --no-reload --start-url www.bilibili.com --source-dir ./dist --target=chromium",
    "clear": "rimraf --glob dist.*",
    "postinstall": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@crxjs/vite-plugin": "2.0.0-beta.23",
    "@ffflorian/jszip-cli": "^3.6.2",
    "@iconify-json/ant-design": "^1.1.15",
    "@types/chrome": "^0.0.262",
    "@unocss/eslint-config": "^0.58.5",
    "@unocss/eslint-plugin": "^0.58.5",
    "@unocss/reset": "^0.58.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.57.0",
    "eslint-plugin-format": "^0.1.0",
    "less": "^4.2.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "postcss-less": "^6.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-less": "^3.0.1",
    "stylus": "^0.62.0",
    "typescript": "^5.2.2",
    "unocss": "^0.58.5",
    "unocss-preset-extra": "^0.5.3",
    "vite": "^5.1.4",
    "web-ext": "^7.7.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix",
    "*.{css,less}": "prettier --write"
  }
}
